{ 
      "PREFACTOR": {
        "label": "PREFACTOR LOFAR pipeline",
        "schema": {
            "type": "object",
            "title": "Configuration Parameters:",
            "description": "This is LOFAR PREFACTOR pipeline for direction independent calibration",
            "properties": {
              "staging": {
                  "type": "object",
                  "collapsed": true,
                  "properties": {
                      "url": {
                          "type": "string",
                          "title": "Staging URL",
                          "description": "Staging service URL",
                          "default": "http://145.100.130.7:32010"
                      },
                      "lta_login": {
                          "type": "string",
                          "title": "LTA login",
                          "description": "User login on LTA",
                          "default": "souley"
                      },
                      "lta_pwd": {
                          "type": "string",
                          "title": "LTA pass",
                          "description": "User pass on LTA",
                          "default": "xxxxx"
                      }},
                "propertyOrder": 1
              },
              "hpc_host": {
                "type": "string",
                "title": "HPC head",
                "description": "HPC head node",
                "default": "",
                "propertyOrder": 4
              },
              "hpc_path": {
                "type": "string",
                "title": "Destination path",
                "description": "Where observation will be transferred to on HPC",
                "default": "",
                "propertyOrder": 5
              },
              "srm_cert": {
                "type": "string",
                "title": "Certificate",
                "description": "SRM certificate for transfer",
                "default": "",
                "format": "textarea",
                "propertyOrder": 6
              },
              "hpc_login": {
                "type": "string",
                "title": "HPC login",
                "description": "User login on HPC",
                "default": "",
                "propertyOrder": 7
              },
              "hpc_pwd": {
                "type": "string",
                "title": "HPC pass",
                "description": "User pass on HPC",
                "default": "",
                "propertyOrder": 8
              },
              "xenon_server_url": {
                "type": "string",
                "title": "Xenon-flow URL",
                "description": "Where Xenon-flow server is running",
                "default": "",
                "propertyOrder": 9
              },
              "api_key": {
                  "type": "string",
                  "title": "API key",
                  "description": "API key for Xenon-flow",
                  "default": "",
                  "propertyOrder": 10
              },
              "workflow_name": {
                  "type": "string",
                  "title": "Workflow name",
                  "description": "Workflow name as seen by Xenon-flow",
                  "default": "",
                  "propertyOrder": 11
              },
              "workflow_cwl": {
                  "type": "string",
                  "title": "CWL workflow",
                  "description": "CWL description of the workflow",
                  "default": "",
                  "propertyOrder": 12
              }
            },
            "required": [
                "staging",
                "url",
                "lta_login",
                "lta_pwd",
                "hpc_host",
                "hpc_path",
                "srm_cert",
                "hpc_login",
                "hpc_pwd",
                "xenon_server_url",
                "api_key",
                "workflow_name",
                "workflow_cwl"
            ]
        },
        "id": "PREFACTOR"
      }
}
